void updateGPS () {
  while (SoftSerial.available()) {
    gps.encode(SoftSerial.read());
  }
}

bool GPS_OK() {
  if (gps.location.age() < GPS_MIN_AGE && gps.hdop.value() < GPS_MIN_HDOP) {
#ifdef DEVMODE
    Serial.println("GPS OK");
#endif
    return true;
  }
  return false;
}

bool gpsStab() {
  if (abs(prevGpsStab - gps.altitude.value()) < 1 || nowGpsStab == false) {
    tGpsStab = millis();
  }
  if (millis() - tGpsStab > 1000) {                                   // If timer hasnt reset within 1 second altitude is stable
    nowGpsStab = false;                                               // Reset started flag
    return true;
  }
  else {
    nowGpsStab = true;
    prevGpsStab = gps.altitude.meters();
    return false;
  }
}


bool setGpsHome() {
  if (gps.satellites.value() >= GPS_MIN_SATS && GPS_OK() == true) {
    // Set home position
    settings.homeLatitude = gps.location.lat();           // Save home Lat
    settings.homeLongitude = gps.location.lng();          // Save home Long
    settings.homeAltitude = gps.altitude.meters();        // Save home gps altitude
#ifdef DEVMODE
    Serial.println("GPS Home position set");
#endif
    return true;
  }
  return false;
}


